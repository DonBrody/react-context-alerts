{
  "name": "react-context-alerts",
  "version": "0.1.11",
  "description": "A responsive Alert manager implemented with React Context",
  "main": "index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:npm": "npm run build:cjs --optimize",
    "build:cjs": "BABEL_ENV=cjs babel src/shared -d lib/",
    "tag": "git tag v$npm_package_version",
    "version:patch": "npm --no-git-tag-version version patch",
    "version:minor": "npm --no-git-tag-version version minor",
    "version:major": "npm --no-git-tag-version version major",
    "postversion": "git commit package.json -m \"Version $npm_package_version\" && npm run tag && git push && git push --tags && npm publish --registry=https://registry.npmjs.org/",
    "prepublish": "npm run build:npm",
    "deploy:heroku": "git commit build -m \"Build for Heroku deployment\" && git push heroku master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DonBrody/react-context-alerts.git"
  },
  "author": "Don Brody",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DonBrody/react-context-alerts/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@material-ui/core": "^3.5.1",
    "@material-ui/icons": "^3.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-inline-react-svg": "^1.0.1",
    "babel-plugin-inline-svg": "^1.0.0",
    "babel-plugin-transform-replace-object-assign": "^2.0.0",
    "babel-preset-airbnb": "^3.0.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "dependencies": {
    "@material-ui/core": "^3.5.1",
    "@material-ui/icons": "^3.0.1",
    "deepmerge": "^2.2.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.0.5"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
